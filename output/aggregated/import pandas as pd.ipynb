import pandas as pd

# ------------------------------------
# File paths
# ------------------------------------
file1 = r"D:\PhD_Projects\TSST_Stress_Workload_Pipeline\output\aggregated\all_data_aggregated.csv"
file2 = r"D:\PhD_Projects\TSST_Stress_Workload_Pipeline\output\aggregated\eeg_features.csv"
output_file = r"D:\PhD_Projects\TSST_Stress_Workload_Pipeline\output\aggregated\all_data_aggregated.csv"

# Keys to match rows
merge_keys = ["Participant", "Condition", "Sample_Frame"]

# ------------------------------------
# Load data
# ------------------------------------
df1 = pd.read_csv(file1)
df2 = pd.read_csv(file2)

# ------------------------------------
# Identify columns to DELETE from df1
# ------------------------------------
# Assumes alphabetical column order; adjust if needed.
cols1_sorted = sorted(df1.columns)

# Define delete range (E -> KB)
start_col_del = "E"
end_col_del = "KB"

cols_to_delete = [
    col for col in cols1_sorted
    if start_col_del <= col <= end_col_del
]

print(f"Columns to DELETE ({len(cols_to_delete)}): {cols_to_delete[:10]} ...")

df1 = df1.drop(columns=cols_to_delete, errors="ignore")

# ------------------------------------
# Identify columns to ADD from df2
# ------------------------------------
cols2_sorted = sorted(df2.columns)

start_col_add = "CW"
end_col_add = "PA"

cols_to_add = [
    col for col in cols2_sorted
    if start_col_add <= col <= end_col_add
]

# Exclude merge keys from addition
cols_to_add = [col for col in cols_to_add if col not in merge_keys]

print(f"Columns to ADD ({len(cols_to_add)}): {cols_to_add[:10]} ...")

# ------------------------------------
# Merge new data into df1
# ------------------------------------
df2_subset = df2[merge_keys + cols_to_add]
df_updated = df1.merge(df2_subset, on=merge_keys, how="left")

# ------------------------------------
# Save output
# ------------------------------------
df_updated.to_csv(output_file, index=False)
print(f"\nUpdated file saved to:\n{output_file}")
